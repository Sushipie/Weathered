<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Weathered</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css"/>
    <script src="https://cdn.jsdelivr.net/npm/places.js@1.19.0"></script>
    
</head>
<body>
    <div class="app-wrap">
        <header>
            <form class="search-container"
            action="/weather" method="post">
            <input type="text" 
            id="city"
            autocomplete="off" 
            class="search-box"
            placeholder="Search For A City"
            name="placeName"
            >
            
            <script>
                
                  var placesAutocomplete = places({
                    appId: 'plMBO385RVJB',
                    apiKey: '21837a1f5ad7bbcfed3c97c5ecfb9592',
                    container: document.querySelector('#city'),
                    templates: {
                        value: function(suggestion) {
                    return suggestion.name;
                    },
            
                    }
                   
                  }).configure({
                    type: 'city',
                    aroundLatLngViaIP: false,
                  });
                
                </script>
            </form>
        </header>
        <main>
            <div class="weather-card">
                <section class="location">
                    <div class="city"><%= location%> </div>
                    <div class="date"><%= date %> </div>
                </section>
                <div class="current">
                    <div class="temp"><%= temp %>°</div>
                    <div class="hi-low">max <%=maxTemp%>° / min <%=minTemp%>°</div>
                    <div class="weather"><%= desc %> </div>
                    <div class="icon-container">
                        
                            <img class="icon" src =<%=icon%>></img>
                        
                    </div>
                    
                        
                        <div class="humidity">humidity <span> <img src="https://img.icons8.com/metro/26/000000/humidity.png"/></span>
                            <%= humidity %><span> % </span> </div>
                        
                    
                    
                </div>
            </div>
        </main>
    </div>

   
        <div class="button">
            <a href="/"><button class="btn" type="submit">Home</button> </a>
            
        </div>
    
</body>
